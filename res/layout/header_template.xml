<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	
	<LinearLayout
		android:layout_width="fill_parent" 
		android:orientation="horizontal" 
		android:layout_height="wrap_content">
			
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_horizontal">
		
			<ImageView 
				android:id="@+id/headerBannerImage"
 				android:layout_width="wrap_content" 
 				android:background="@drawable/header" 
				android:gravity="center" 
				android:layout_marginTop="5px" 
 				android:layout_height="wrap_content"/>
		</LinearLayout>
		
		<Button 
			android:id="@+id/editButton"
			android:layout_width="wrap_content"
			android:layout_height="34px"
			android:text="Edit"
			android:gravity="center_vertical|center_horizontal"
			android:textColor="@color/COLOR_BG"
			android:typeface="sans"
			android:textStyle="bold"
			android:layout_marginTop="5px"
			android:layout_marginLeft="-52px"
			android:visibility="gone"/>
	</LinearLayout>
	
	<LinearLayout
		android:gravity="center_vertical|center_horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@drawable/grayroundededge"
		android:layout_marginLeft="5px"
		android:layout_marginRight="5px">
		
		<ImageView 
			android:id="@+id/myFaveImage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/myfavorite"
			android:layout_margin="8px"
			android:visibility="gone" />
			
		<Button 
			android:id="@+id/refreshButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/button_refresh"  />
						
		<EditText 
			android:id="@+id/searchEditText"
			android:layout_height="wrap_content" 
			android:layout_width="212px" 
			android:maxLines="1"
			android:singleLine="true"
			android:focusableInTouchMode="false"
			android:gravity="center_horizontal|center_vertical"
			android:text="Around Me - All"
			android:textColor="@color/COLOR_BG"
			android:background="@drawable/roundededittext"/>
						
		<Button 
			android:id="@+id/mapButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/seg_map"
			android:layout_marginLeft="3px"
			android:layout_marginTop="1px"/>
						
		<Button 
			android:id="@+id/arButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/seg_ar" 
			android:layout_marginLeft="3px"
			android:layout_marginTop="1px"/>
	</LinearLayout>
	
